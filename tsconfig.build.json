{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedDeclarations": true,
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "/dist/tsconfig.build.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "vitest.config.ts",
    "tsup.config.ts",
    "./update-deno.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.test-d.ts"
  ]
}
